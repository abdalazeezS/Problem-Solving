#include <bits/stdc++.h>
using namespace std;
#define int             long long
#define endl            '\n'
#define debug(x)        cout<<"[" << #x << " is:" << x << "] "<<endl;



void solve() 
{

    int n;
    cin >> n;
    string s;
    cin >> s;
    vector<int>sub;
    int i =0; 
    while (i < n)
    {
        if (s[i] == '1')
        {
            int c= 0;
            while (s[i] == '1')
            {
                c++;
                i++;
            }
            sub.push_back(c);
        }
        else{
            int c= 0;
            while (s[i] == '0')
            {
                c++;
                i++;
            }
            sub.push_back(c);
        }
    }
    int ans =0;
    for(i = 0 ; i < sub.size() -1  ; i++){
        if(sub[i] % 2 != 0){
            sub[i]++;
            sub[i+1]--;
            ans++;
        }
    }
    
    cout<< ans << endl;
    

}  



int32_t main()
{
    ios::sync_with_stdio(false); cin.tie(0); cout.tie(0);
    
    int t = 1;  
    cin >> t;
    while(t--){
        solve();
    }
    return 0;
}
